[Unit]
Description=Autonomy Daemon
After=network.target

[Service]
ExecStart=/usr/bin/java -jar %h/.local/autonomy/autonomy-thorntail.jar -DrestartOn=%h/.local/autonomy/autonomy-thorntail.jar -DrestartCommand="%h/bin/restartAutonomy.sh"
ExecStop=/bin/kill $MAINPID
KillMode=process
Restart=always

[Install]
WantedBy=multi-user.target
