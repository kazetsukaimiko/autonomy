<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>io.freedriver.autonomy</groupId>
  <artifactId>autonomy</artifactId>
  <name>Autonomy</name>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <properties>
    <version.thorntail>2.5.0.Final</version.thorntail>
    <maven.compiler.source>11</maven.compiler.source>
    <maven.compiler.target>11</maven.compiler.target>
    <failOnMissingWebXml>false</failOnMissingWebXml>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

    <lwjgl.version>3.2.3</lwjgl.version>
    <swt.version>4.6.1</swt.version>
    <joml.version>1.9.18-SNAPSHOT</joml.version>

    <junit.jupiter.version>5.5.2</junit.jupiter.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>io.thorntail</groupId>
        <artifactId>bom-all</artifactId>
        <version>${version.thorntail}</version>
        <scope>import</scope>
        <type>pom</type>
      </dependency>

      <dependency>
        <groupId>io.freedriver.autonomy</groupId>
        <artifactId>automony-api</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>io.freedriver.autonomy</groupId>
        <artifactId>jsonlink</artifactId>
        <version>${project.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <modules>
    <module>jsonlink</module>
    <module>api</module>
    <module>web</module>
  </modules>

</project>
